#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        default_layer {
// -------------------
// | 7      |  8  |  9  |
// | 4      |  5  |  6  |
// | 1      |  2  |  3  |
// | MO(1)  |  0  |  .  |
// ----------------------
            bindings = <
    &cp MEDIA_PLAY_PAUSE &kp HOME &kp PGUP 
    &kp DEL &kp END &kp PGDN 
    &cp MEDIA_PREV_TRACK &kp UP &cp MEDIA_NEXT_TRACK 
    &kp LEFT     &kp DOWN &kp RIGHT 
            >;
        };

        nav_layer {
// -----------------------
// | BTNXT |  HOME  |  PGUP  |
// | BTPRV |  END   |  PGDN  |
// | BTCLR |  _     |  _     |
// | _     |  _     |  RET   |
// -----------------------
            bindings = <
    &bt BT_NXT &kp HOME &kp PGUP 
    &bt BT_PRV &kp END  &kp PGDN 
    &bt BT_CLR &trans   &trans 
    &trans     &trans   &kp RET
            >;
        };
    };
};


